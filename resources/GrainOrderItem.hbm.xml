<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="entities.GrainOrderItem" table="grain_order_item">
        <meta attribute="class-description">
            contains information about items in a grain order
        </meta>

        <!--Add id for the key -->
        <composite-id>
            <key-property name="grainId" column="grain_id" type="int"/>
            <key-property name="orderId" column="order_id" type="int"/>
        </composite-id>


        <!--Add a property for all other instance variables/columns-->



        <property name="quantity" column="quantity"
                  type="float"/>

    </class>

</hibernate-mapping>