<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="entities.GrainOrder" table="grain_order">
        <meta attribute="class-description">
            contains information about grain orders
        </meta>

        <!--Add id for the key -->
        <id name="orderId" type="int"
            column="order_id">
            <generator class="native"/>
        </id>

        <map name="grains" table="grain_order_item">
            <key>
                <column name="order_id"/>
            </key>
            <index type="int" column="grain_id"/>
            <element type="float" column="quantity"/>
        </map>



