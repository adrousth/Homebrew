<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="entities.Hop" table="item_hop">
        <meta attribute="class-description">
            contains information about different hops
        </meta>

        <!--Add id for the key -->
        <id name="hopId" type="int"
            column="hop_id">
            <generator class="native"/>
        </id>
        <!--Add a property for all other instance variables/columns-->
        <property name="name" column="name"
                  type="string"/>



        <property name="currentStock" column="current_stock"
                  type="float"/>
        <property name="description" column="description"
                  type="string"/>
        <property name="url" column="url"
                  type="string"/>


    </class>

</hibernate-mapping>